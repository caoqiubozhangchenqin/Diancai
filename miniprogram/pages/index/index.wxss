/* pages/index/index.wxss */

page {
  background-color: #f8f9fa; 
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
}

.container {
  position: relative;
  min-height: 100vh;
  /* --- 核心修改1：将 container 设为 Flex 容器 --- */
  display: flex;
  flex-direction: column; /* 让子元素垂直排列 */
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 30rpx;
  /* --- 核心修改2：让 content-wrapper 也成为 Flex 容器 --- */
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
  flex-grow: 1; /* 让它自动填满 container 的所有剩余空间 */
  /* --- 核心修改3：设置子元素的对齐方式 --- */
  justify-content: center; /* 子元素在垂直方向上居中对齐 */
}

.menu-display-area {
  background-color: rgba(255, 255, 255, 0.85);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(0,0,0,0.08);
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  /* --- 核心修改4：移除可能影响对齐的顶部外边距 --- */
  /* 如果之前有 margin-top，在这里移除或设为0 */
}

/* 
  让日历组件作为一个独立的 Flex 项
*/
calendar {
  flex-shrink: 0; /* 防止日历在空间不足时被压缩 */
}

.menu-section {
  padding: 30rpx;
}

.menu-section:first-child {
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.8);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.menu-item {
  font-size: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(245, 245, 245, 0.8);
  color: #555;
}

.menu-item:last-child {
  border-bottom: none;
}

.empty-tip {
  color: #888;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.order-btn {
  margin-top: 30rpx;
  width: 100%;
  font-weight: bold;
}
.stats-btn {
  margin-top: 20rpx;
  background-color: #fff;
  color: #333;
  width: 100%;
}